<body id="root"> 
    <div id="back"></div>
    <div class="flex-full">
        <h1 class="display-1">SpaceCorps</h1>
        <p class="lead">▶ <span id="typed"></span> ◀</p>
    </div>

    <!-- TypedJS -->
    <script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.11"></script>
    <script>
        var options = {
            strings: ["Explore the vast <i>Alta Galaxy<i>.", "Colonize new planets.", "Make allies and enemies on the way.", "Play Now!"],
            typeSpeed: 40
        };

        var typed = new Typed('#typed', options);
    </script>

    <div class="reduce-anim">
        <input type="checkbox" id="noAnim">
        <label for="noAnim">Reduce Animations</label>
    </div>

    <!-- Particles -->
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    <script>particlesJS.load("root", "/assets/particles.json"); </script>
    <!-- Bootstrap Stuff -->
